#include<bits/stdc++.h>
using namespace std;

int main()
{
    char a[10005];
    int i,l,n;
    while(gets(a))
    {
        l=strlen(a);
        n=0;
        for(i=0;i<l;i++)
        {
            if(isalpha(a[i]) && !isalpha(a[i+1]))
              n++;
        }
        printf("%d\n",n);
    }
    return 0;
}
